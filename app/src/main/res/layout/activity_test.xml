<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/test_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="第一步：CSP系统鉴权(登录)"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_create_csp_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="创建csp用户"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_search_csp_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="万维用户查询自己所创建的CSP用户"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_search_owner_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="根据CSP用户ID查询所有owner权限的场所"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_create_csp_corp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="创建CSP集团"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_create_csp_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="创建CSP场所"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_create_csp_site_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="创建场所SSID"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_distribute_ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="分配AP到场所"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="整体配置（包含上述功能）"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_search_ap_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="查询AP注册状态"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_red_dark"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/test_ap_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="AP管理员账号登陆（配置AP第一步）"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test_ap_aloud_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="AP切换云模式"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
</ScrollView>